<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainLayout" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jepretblur.controller.MenuUtamaController">
   
   <left>
      <VBox prefHeight="600.0" prefWidth="220.0" spacing="10.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" prefHeight="60.0" prefWidth="220.0" text="JEPRET BLUR" textFill="#2ecc71">
               <font><Font name="System Bold" size="22.0" /></font>
               <VBox.margin><Insets bottom="20.0" top="20.0" /></VBox.margin>
            </Label>
            
            <Label fx:id="welcomeLabel" alignment="CENTER" text="Halo, User!" textFill="WHITE" wrapText="true">
               <font><Font size="14.0" /></font>
               <VBox.margin><Insets bottom="30.0" left="10.0" /></VBox.margin>
            </Label>

            <Button fx:id="btnKamera" onAction="#showMasterKamera" prefHeight="45.0" prefWidth="220.0" styleClass="btn-sidebar" text="DATA KAMERA" textFill="WHITE" />
            <Button fx:id="btnPelanggan" onAction="#showMasterPelanggan" prefHeight="45.0" prefWidth="220.0" styleClass="btn-sidebar" text="DATA PELANGGAN" textFill="WHITE" />
            <Button fx:id="btnSewa" onAction="#showTransaksi" prefHeight="45.0" prefWidth="220.0" styleClass="btn-sidebar" text="SEWA KAMERA" textFill="WHITE" />
            <Button fx:id="btnKembali" onAction="#showPengembalian" prefHeight="45.0" prefWidth="220.0" styleClass="btn-sidebar" text="PENGEMBALIAN" textFill="WHITE" />
            <Button fx:id="btnLaporan" onAction="#showLaporan" prefHeight="45.0" prefWidth="220.0" styleClass="btn-sidebar" text="LAPORAN" textFill="WHITE" />
            <Button fx:id="btnInfoPemilik" onAction="#showInfoPemilik" visible="false" managed="false" text="STATUS KAMERA SAYA" styleClass="btn-sidebar" textFill="WHITE" />
            <Button fx:id="btnInputUnit" onAction="#showInputUnit" visible="false" managed="false" text="TITIP KAMERA (+)" styleClass="btn-sidebar" textFill="WHITE" />
            <Button fx:id="btnKaryawan" onAction="#showMasterKaryawan" prefHeight="45.0" prefWidth="220.0" styleClass="btn-sidebar" text="DATA KARYAWAN" textFill="WHITE" />

            <VBox VBox.vgrow="ALWAYS" />
            
            <Button mnemonicParsing="false" onAction="#handleLogout" prefHeight="45.0" prefWidth="220.0" style="-fx-background-color: #e74c3c;" text="LOGOUT" textFill="WHITE">
                <VBox.margin><Insets bottom="20.0" /></VBox.margin>
            </Button>
         </children>
         <padding><Insets left="10.0" right="10.0" /></padding>
      </VBox>
   </left>

   <center>
      <VBox alignment="CENTER" style="-fx-background-color: #ecf0f1;">
         <children>
            <Label text="Selamat Datang di Sistem Rental Kamera" textFill="#7f8c8d">
               <font><Font size="24.0" /></font>
            </Label>
            <Label text="Pilih menu di sebelah kiri untuk memulai" textFill="#95a5a6">
               <font><Font size="16.0" /></font>
            </Label>
         </children>
      </VBox>
   </center>
</BorderPane>