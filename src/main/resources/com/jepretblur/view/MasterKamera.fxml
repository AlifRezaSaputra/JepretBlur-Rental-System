<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jepretblur.controller.MasterKameraController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Master Data Kamera" textFill="#2c3e50">
               <font><Font name="System Bold" size="24.0" /></font>
            </Label>
            
            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="kameraTable" prefHeight="500.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colId" prefWidth="40.0" text="ID" />
                      <TableColumn fx:id="colOwner" prefWidth="100.0" text="Pemilik" />
                      
                      <TableColumn fx:id="colMerk" prefWidth="100.0" text="Merk" />
                      <TableColumn fx:id="colTipe" prefWidth="120.0" text="Tipe" />
                      <TableColumn fx:id="colHarga" prefWidth="100.0" text="Harga/Hari" />
                      <TableColumn fx:id="colStok" prefWidth="60.0" text="Stok" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  
                  <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
                     <children>
                        <Label text="Form Input Data">
                           <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        <Label text="Untuk kamera titipan, pemilik otomatis terisi." wrapText="true" textFill="#7f8c8d" style="-fx-font-size: 10px;"/>
                        
                        <TextField fx:id="txtMerk" promptText="Merk (Contoh: Canon)" />
                        <TextField fx:id="txtTipe" promptText="Tipe Kamera" />
                        <TextField fx:id="txtHarga" promptText="Harga Sewa" />
                        <TextField fx:id="txtStok" promptText="Jumlah Stok" />
                        
                        <HBox spacing="10.0" alignment="CENTER">
                           <children>
                                <Button onAction="#tambahKamera" text="Simpan" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                                <Button onAction="#updateKamera" text="Update" style="-fx-background-color: #f1c40f; -fx-text-fill: black;"/>
                                <Button onAction="#hapusKamera" text="Hapus" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                           </children>
                        </HBox>
                        <Button onAction="#clearForm" text="Bersihkan Form" maxWidth="Infinity"/>
                        <Button onAction="#kembaliKeMenu" text="Kembali ke Menu" maxWidth="Infinity" style="-fx-margin-top: 20;"/>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>