<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jepretblur.controller.MasterKaryawanController">
   <children>
      <VBox spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <Label text="Master Data Karyawan / Admin" textFill="#2c3e50"><font><Font name="System Bold" size="24.0" /></font></Label>
         
         <HBox spacing="20.0" VBox.vgrow="ALWAYS">
            <TableView fx:id="tableUser" HBox.hgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                  <TableColumn fx:id="colUser" prefWidth="150.0" text="Username" />
                  <TableColumn fx:id="colRole" prefWidth="100.0" text="Jabatan (Role)" />
               </columns>
               <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
            </TableView>
            
            <VBox prefWidth="250.0" spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
               <Label text="Tambah Akun Baru"><font><Font name="System Bold" size="14.0" /></font></Label>
               
               <TextField fx:id="txtUser" promptText="Username" />
               <PasswordField fx:id="txtPass" promptText="Password" />
               <ComboBox fx:id="comboRole" prefWidth="250.0" promptText="Pilih Jabatan" />
               
               <Button onAction="#tambahUser" text="Tambah Akun" maxWidth="Infinity" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
               <Button onAction="#hapusUser" text="Hapus Terpilih" maxWidth="Infinity" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
               <Button onAction="#kembali" text="Kembali ke Menu" maxWidth="Infinity" style="-fx-margin-top: 20;"/>
            </VBox>
         </HBox>
      </VBox>
   </children>
</AnchorPane>