<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" styleClass="root-pane" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jepretblur.controller.RegisterController">
   <children>
      <VBox alignment="CENTER" layoutX="175.0" layoutY="40.0" prefHeight="370.0" prefWidth="250.0" spacing="12.0" styleClass="login-card">
         <children>
            <Label text="DAFTAR AKUN" textFill="#2ecc71">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            
            <TextField fx:id="regUsernameField" promptText="Username Baru" />
            
            <PasswordField fx:id="regPasswordField" promptText="Password Baru" />
            
            <ComboBox fx:id="roleComboBox" prefWidth="250.0" promptText="Pilih Role" />
            
            <Button onAction="#handleRegister" prefWidth="250.0" styleClass="btn-primary" text="DAFTAR SEKARANG" textFill="WHITE">
               <font><Font name="System Bold" size="13.0" /></font>
            </Button>
            
            <Button onAction="#handleBackToLogin" style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d;" text="Sudah punya akun? Login" underline="true" />
            
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>