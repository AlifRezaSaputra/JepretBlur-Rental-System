<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jepretblur.controller.LaporanController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Laporan Riwayat Transaksi" textFill="#2c3e50">
               <font><Font name="System Bold" size="24.0" /></font>
            </Label>

            <HBox spacing="20.0" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="tableLaporan" HBox.hgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                      <TableColumn fx:id="colPelanggan" prefWidth="120.0" text="Pelanggan" />
                      <TableColumn fx:id="colKamera" prefWidth="120.0" text="Kamera" />
                      <TableColumn fx:id="colSewa" prefWidth="90.0" text="Tgl Sewa" />
                      <TableColumn fx:id="colKembali" prefWidth="90.0" text="Tgl Kembali" />
                      <TableColumn fx:id="colStatus" prefWidth="80.0" text="Status" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>

                  <VBox prefWidth="300.0" spacing="10.0" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-background-radius: 5;">
                     <children>
                        <Label text="Detail Struk Transaksi">
                           <font><Font name="System Bold" size="14.0" /></font>
                        </Label>
                        
                        <TextArea fx:id="txtStruk" editable="false" prefHeight="400.0" wrapText="true" style="-fx-font-family: 'Monospaced';">
                           <font><Font size="12.0" /></font>
                        </TextArea>
                        
                        <Button onAction="#cetakStruk" text="ðŸ–¨ Cetak Struk (Simulasi)" maxWidth="Infinity" style="-fx-background-color: #34495e; -fx-text-fill: white;"/>
                        <Button onAction="#refreshData" text="ðŸ”„ Refresh Data" maxWidth="Infinity" />
                        <Button onAction="#kembaliKeMenu" text="Kembali ke Menu" maxWidth="Infinity" style="-fx-margin-top: 10;"/>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>