<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jepretblur.controller.TransaksiKembaliController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Label text="Transaksi Pengembalian Kamera" textFill="#2c3e50">
               <font><Font name="System Bold" size="24.0" /></font>
            </Label>
            
            <Label text="Pilih data di tabel untuk memproses pengembalian:" textFill="#7f8c8d" />

            <TableView fx:id="tableSewa" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colPelanggan" prefWidth="150.0" text="Pelanggan" />
                <TableColumn fx:id="colKamera" prefWidth="150.0" text="Kamera" />
                <TableColumn fx:id="colTglSewa" prefWidth="100.0" text="Tgl Sewa" />
                <TableColumn fx:id="colTglKembali" prefWidth="100.0" text="Jadwal Balik" />
                <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total Biaya" />
                <TableColumn fx:id="colStatus" prefWidth="80.0" text="Status" />
              </columns>
            </TableView>

            <Button fx:id="btnProcess" onAction="#prosesKembali" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;" text="PROSES PENGEMBALIAN" />
            
            <Button onAction="#kembaliKeMenu" text="Kembali ke Menu Utama" />
         </children>
      </VBox>
   </children>
</AnchorPane>